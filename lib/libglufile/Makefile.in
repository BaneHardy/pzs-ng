prefix=@GLPATH@
libdir=$(prefix)/lib
CC=@CC@
LD=@LD@
CFLAGS=@CFLAGS@
LDFLAGS=@LDFLAGS@
INSTALL=@INSTALL@
RM=@RM@ -f

install: all
	$(INSTALL) -m444 libglufile.so $(prefix)/lib

all: libglufile.so

libglufile.so: gluserfile.o
	$(LD) $(LDFLAGS) -o libglufile.so gluserfile.o

gluserfile.o: gluserfile.c gluserfile.h glustruct.h

clean:
	$(RM) libglufile.so

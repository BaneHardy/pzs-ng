CFLAGS=-Wall -g
CC=@CC@
LIBS=@LIBS@

all: strl_dir libglufile_dir

install: all
	cd libglufile ; $(MAKE) install

distclean: clean
	cd strl ; $(MAKE) distclean

clean:
	cd strl ; $(MAKE) clean
	cd libglufile ; $(MAKE) clean

strl_dir:
	@(echo -e "\n\033[1;37mCompiling the strl lib\033[0m")
	cd strl ; $(MAKE) all

libglufile_dir:
	@(echo -e "\n\033[1;37mCompiling the gl userfile lib\033[0m")
	cd libglufile ; $(MAKE) all

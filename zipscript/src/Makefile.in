prefix=@prefix@
rootpath=$(prefix)
datapath=/ftp-data
bindir=$(rootpath)/bin
binpath=../bin

CC=@CC@
#CFLAGS=-O2 @STATIC@ -Wall -pedantic -I../include/
CFLAGS=-D_FILE_OFFSET_BITS=64 -D_LARGEFILE_SOURCE -std=c99 @STATIC@ -Wall -g -I../include
LDFLAGS=@LDFLAGS@
ZSLIBS=@ZSLIBS@
UNIVERSAL=race-file.o zsfunctions.o mp3info.o
RM=rm -f

RD-OBJECTS=racedebug.o
ZS-OBJECTS=zipscript-c.o dizreader.o stats.o complete.o convert.o multimedia.o crc.o $(UNIVERSAL)
PD-OBJECTS=postdel.o dizreader.o stats.o convert.o multimedia.o $(UNIVERSAL)
RS-OBJECTS=racestats.o dizreader.o stats.o convert.o $(UNIVERSAL)
CU-OBJECTS=cleanup.o
DC-OBJECTS=datacleaner.o
SC-OBJECTS=rescan.o dizreader.o stats.o convert.o complete.o crc.o multimedia.o $(UNIVERSAL)
ZS-DEPEND=cleanup.o complete.o convert.o datacleaner.o postdel.o racestats.o rescan.o stats.o zipscript-c.o multimedia.o $(UNIVERSAL)

all: racedebug zipscript-c postdel racestats cleanup datacleaner rescan
	@(ls -lA $(binpath))

$(ZS-DEPEND): ../conf/zsconfig.h

zipscript-c: $(ZS-OBJECTS) $(ZS-DEPEND)
	     $(CC) $(LDFLAGS) $(ZS-OBJECTS) -o $(binpath)/$@ $(ZSLIBS)

racedebug: $(RD-OBJECTS)
	   $(CC) $(LDFLAGS) $(RD-OBJECTS) -o $(binpath)/$@

postdel: $(PD-OBJECTS)
	 $(CC) $(LDFLAGS) $(PD-OBJECTS) -o $(binpath)/$@ $(ZSLIBS)

racestats: $(RS-OBJECTS)
	   $(CC) $(LDFLAGS) $(RS-OBJECTS) -o $(binpath)/$@ $(ZSLIBS)

cleanup: $(CU-OBJECTS)
	 $(CC) $(LDFLAGS) $(CU-OBJECTS) -o $(binpath)/$@

datacleaner: $(DC-OBJECTS)
	     $(CC) $(LDFLAGS) $(DC-OBJECTS) -o $(binpath)/$@

rescan: $(SC-OBJECTS)
	$(CC) $(LDFLAGS) $(SC-OBJECTS) -o $(binpath)/$@ $(ZSLIBS)

install:
	if [ ! -e "$(rootpath)$(datapath)/zipscript/" ]; then mkdir "$(rootpath)$(datapath)/zipscript/"; else $(RM) -r "$(rootpath)$(datapath)/zipscript/"*; fi
	chmod 666 $(rootpath)$(datapath)/logs/glftpd.log
	chmod 777 $(rootpath)$(datapath)/zipscript/
#	strip $(binpath)/*
	cp -f $(binpath)/zipscript-c $(bindir)/
	cp -f $(binpath)/postdel $(bindir)/
	cp -f $(binpath)/racestats $(bindir)/
	cp -f $(binpath)/cleanup $(bindir)/
	cp -f $(binpath)/datacleaner $(bindir)/
	cp -f $(binpath)/rescan $(bindir)/
	cp -f $(binpath)/racedebug $(bindir)/

clean:
	@$(RM) *.o $(binpath)/zipscript-c $(binpath)/postdel $(binpath)/racestats $(binpath)/cleanup $(binpath)/datacleaner $(binpath)/rescan $(binpath)/racedebug Makefile
binclean:
	@$(RM) *.o $(binpath)/zipscript-c $(binpath)/postdel $(binpath)/racestats $(binpath)/cleanup $(binpath)/datacleaner $(binpath)/rescan $(binpath)/racedebug

strip:
	strip $(binpath)/*

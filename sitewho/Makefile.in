prefix=@GLPATH@
CC=@CC@
RM=@RM@ -f
MAKE=@MAKE@
INSTALL=@INSTALL@

CFLAGS=@CFLAGS@ -W -Wall @GLVERSION@ -I../../

all: sitewho.c
	$(CC) $(CFLAGS) -o sitewho sitewho.c

install: all
	$(INSTALL) -m755 sitewho $(prefix)/bin
	$(INSTALL) -m644 who.* $(prefix)/ftp-data/misc
	$(INSTALL) -m644 sitewho.conf $(prefix)/bin

distclean: clean

clean:
	$(RM) sitewho

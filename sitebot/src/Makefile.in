prefix=@GLPATH@
CC=@CC@
RM=@RM@ -f

CFLAGS=@CFLAGS@ -W -Wall @GLVERSION@ -I../../ -I../../zipscript/include/
LDFLAGS=@LDFLAGS@
INSTALL=@INSTALL@

targets=@PASSCHK@
install_targets=@PASSCHK2@

all: $(targets)

passchk: passchk.c
	$(CC) $(LDFLAGS) $(CFLAGS) -o passchk passchk.c @LCRYPT@ @LCRYPTO@

ng-bw: ng-bw.c
	$(CC) $(LDFLAGS) $(CFLAGS) @M32@ -o ng-bw ng-bw.c @LCRYPT@ @LCRYPTO@

install: $(install_targets)

ng-bw-install: ng-bw
	$(INSTALL) -m755 ng-bw $(prefix)/bin

passchk-install: passchk
	$(INSTALL) -m755 passchk $(prefix)/bin

distclean: clean

clean:
	$(RM) ng-bw passchk

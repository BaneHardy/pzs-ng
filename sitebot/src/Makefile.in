prefix=@GLPATH@
CC=@CC@
RM=@RM@ -f

CFLAGS=@CFLAGS@ -W -Wall @GLVERSION@ -I../../ -I../../zipscript/include/
LDFLAGS=@LDFLAGS@
INSTALL=@INSTALL@

targets=ng-bw @PASSCHK@

all: $(targets)

passchk: passchk.c
	$(CC) $(LDFLAGS) $(CFLAGS) -o passchk passchk.c @LCRYPT@ @LCRYPTO@

ng-bw: ng-bw.c
	$(CC) $(LDFLAGS) $(CFLAGS) @M32@ -o ng-bw ng-bw.c @LCRYPT@ @LCRYPTO@

install: all
	$(INSTALL) -m755 passchk $(prefix)/bin
	$(INSTALL) -m755 ng-bw $(prefix)/bin

distclean: clean

clean:
	$(RM) ng-bw passchk

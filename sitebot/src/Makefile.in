prefix=@GLPATH@
CC=@CC@
RM=@RM@ -f

CFLAGS=@CFLAGS@ -W -Wall @GLVERSION@ -I../../
LDFLAGS=@LDFLAGS@
INSTALL=@INSTALL@

all: passchk ng-bw

passchk: passchk.c
	$(CC) $(LDFLAGS) $(CFLAGS) -o passchk passchk.c @LCRYPT@ @LCRYPTO@

ng-bw: ng-bw.c
	$(CC) $(LDFLAGS) $(CFLAGS) -o ng-bw ng-bw.c @LCRYPT@ @LCRYPTO@

install: all
	$(INSTALL) -m755 passchk $(prefix)/bin
	$(INSTALL) -m755 ng-bw $(prefix)/bin

distclean: clean

clean:
	$(RM) ng-bw passchk
